<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="./css/hamburger.css">
    <link rel="stylesheet" href="./css/main.css">
    <script src="./js/dom.js" defer></script>
    <script src="./js/edit.js" defer></script>
    <script src="./js/main.js" defer></script>
    <title>Document</title>
</head>
<body>
    
    <div id="container">

        <div class="nav">
            <nav>
                <div class="span">
                    <span></span>
                    <span></span>
                    <span></span>
                </div>
            </nav>
        </div>


        <div class="sidebar">
             <div class="sidebarContent">
                <p align="center"> sidebar Menu</p>

                <ul>
                    <li align="center"><a href="/changePass">changePassword</a></li>
                    <li align="center"><a href="/deleteAccount">Delete Account</a></li>
                    <li align="center"><a href="/logout">logout</a></li>
                    <li align="center"><a href="">GRADEPOINT TRACKER</a></li>
                </ul>
    
            </div>
        </div>
    

        <div class="entry">
            <p style="color:rgb(0, 204, 255);">please add the courses in order of their semesters to avoid confusion</p>
            <form  >
            <label for="">course</label> <br>
            <input type="text"  name="courses" autocomplete="off" required> <br>

            <label for="">unit</label> <br>
            <input type="text"  name="unit" autocomplete="off" required> <br>

            <label for="">grade point</label> <br>
            <input type="numbers" name="gradePoint" autocomplete="off" required> <br>
            
            <button id="button" type="submit">submit</button>
            </form>

            <div class="centertable">

                
            <table >
                <tr>
                    <td class="tableTitle"> Courses</td>
                    <td class="tableTitle"> Points </td>
                    <td class="tableTitle">Unit</td>
                    <td class="tableTitle">grade</td>
                    <td class="tableTitle">Edit</td>
                </tr>

                <%## loop through the courses and gradePoint %> 
                <% for( var i=0;i<courses.length;i++){ %>
                
                <tr>
                    <td class="courses"> <%= courses[i] %> </td>
                    <td class="points"> <%= points[i] %> </td> 
                    <td class="unit"> <%= units[i] %> </td>
                    
                    <%## grade A %> 
                    <% gradeA.forEach(element => { %>
                        <% if (element==points[i]) { %>
                            <td class="grade" >A</td> 
                        <% } %>
                    <% }) %>

                    <%# grade B %> 
                    <% gradeB.forEach(element => { %>
                        <% if (element==points[i]) { %>
                            <td class="grade">B</td> 
                        <% } %>
                    <% }) %>

                    <%# grade C %> 
                    <% gradeC.forEach(element => { %> 
                        <% if (element==points[i]) { %>
                            <td class="grade">C</td> 
                        <% } %>
                    <% }) %>  

                    <%# grade D %> 
                    <% gradeD.forEach(element => { %>
                        <% if (element==points[i]) { %>
                            <td class="grade">D</td> 
                        <% } %>
                    <% }) %>  

                    <%# grade E %> 
                    <% gradeE.forEach(element => { %>  
                        <% if (element==points[i]) { %>
                            <td class="grade">E</td> 
                        <% } %>
                    <% }) %>  

                    <td>
                        <%## send a req paramto the server) from the client side javascript to handle the deletion of selected items %> 
                            <form class="form">
                                <input type="hidden" name="items" value="">
                                <button type="submit" class="btn">Delete</button>
                            </form>
                        </td>

                    </tr>

                <% } %> 
        
            </table> 
        
        </div>   
    </div>

    <footer>
        <div align="center">
          <h3>we travel</h3>
        </div>
    </footer>   

</body>
</html>











